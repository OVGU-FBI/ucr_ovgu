<mvc:View
  controllerName="content.Overview"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
  xmlns:vbm="sap.ui.vbm"
   height="100%"
   displayBlock="true">
   <Page
       showHeader = "false"
       enableScrolling="false">
    <vbm:AnalyticMap 
        id="vbi"
        width="100%"
        height="100%"
        regionClick="onRegionClick"
      regionContextMenu="onRegionContextMenu"
      regions ="{/regionProperties}">
        <vbm:regions>
        <vbm:Region           
            code="{code}" 
            color="{color}"
            tooltip = "{tooltip}"/>
      </vbm:regions>
      <vbm:Circles 
            items="{/Circles}"
          click="onClickItem" 
          contextMenu="onContextMenuItem" >
        <vbm:Circle 
            position="{A}" 
            tooltip="{D}" 
            radius="{E}"
            color="{B}"
            colorBorder="{C}"
            click="onClickCircle" 
            contextMenu="onContextMenuCircle"/>
      </vbm:Circles>
    </vbm:AnalyticMap>
    <footer>
      <Toolbar>
            <ToolbarSpacer/>
              <Button 
                id="ZoomButton"
            icon="sap-icon://zoom-in"
            tooltip="Zoom in to EU"
            enabled="true"
            press="onZoomIn" />
        </Toolbar>
      </footer>
   </Page>
</mvc:View>